<resources>

    <style name="Theme.Light.FullScreenDialogAct" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Style_Dialog_Button">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff425968</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <style name="menuStyle_other">
        <item name="android:layout_width">@dimen/menu_size</item>
        <item name="android:layout_height">@dimen/menu_size</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="menuStyle" parent="menuStyle_other">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/circlebtn</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/menu_textColor</item>
    </style>

    <style name="pwd_show">
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:password">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>