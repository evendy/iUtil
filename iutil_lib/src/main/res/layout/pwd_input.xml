<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:gravity="center"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:enabled="false"
        android:text="@string/pwd_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pwd_first"
            android:background="@drawable/input_left"
            style="@style/pwd_show" />

        <ImageView
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/pwd_secend"
            android:background="@drawable/input_mid"
            style="@style/pwd_show" />

        <ImageView
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/pwd_third"
            android:background="@drawable/input_mid"
            style="@style/pwd_show" />

        <ImageView
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/pwd_fourth"
            android:background="@drawable/input_right"
            style="@style/pwd_show" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/one"
                style="@style/menuStyle"
                android:text="1" />


            <TextView
                android:id="@+id/two"
                style="@style/menuStyle"
                android:text="2" />


            <TextView
                android:id="@+id/three"
                style="@style/menuStyle"
                android:text="3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/four"
                android:text="4"
                style="@style/menuStyle" />


            <TextView
                android:id="@+id/five"
                style="@style/menuStyle"
                android:text="5" />


            <TextView
                android:id="@+id/six"
                style="@style/menuStyle"
                android:text="6" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/seven"
                style="@style/menuStyle"
                android:text="7" />


            <TextView
                android:id="@+id/eight"
                style="@style/menuStyle"
                android:text="8" />


            <TextView
                android:id="@+id/nine"
                style="@style/menuStyle"
                android:text="9" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/reset"
                style="@style/menuStyle"
                android:text="Reset" />


            <TextView
                android:id="@+id/zero"
                style="@style/menuStyle"
                android:text="0" />


            <TextView
                android:id="@+id/cancel"
                style="@style/menuStyle"
                android:text="Cancel" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
